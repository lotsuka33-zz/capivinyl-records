<h1><%= @vinyl.album %></h1>
<!-- <p id="notice"><%= notice %></p> -->
<div class="wrapper">
  <img src="<%= @vinyl.picture %>" class="cover">

  <div class="info">
    <p><strong>Album name:</strong> <%= @vinyl.album %></p>
    <p><strong>Artist:</strong> <%= @vinyl.artist %></p>
    <p><strong>Year:</strong> <%= @vinyl.year %></p>
    <p><strong>Genre:</strong> <%= @vinyl.genre %></p>
    <p><strong>Description:</strong> <%= @vinyl.description %></p>
  </div>

  <div class="row">
    <button class="btn btn-success"><%= link_to 'Borrow', new_vinyl_rental_path(@vinyl) %></button>
    <button class="btn btn-danger"><%= link_to 'Back', root_path %></button>
  </div>
</div>
