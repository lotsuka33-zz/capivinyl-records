.banner {
  color: rgb(162, 162, 162);
  text-align: center;
  height: 100vh;
  background-size: $white !important;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32px;
  background-image: linear-gradient(-225deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.7) 50%), url(<%= asset_url 'banner.jpg' %>);
}

.banner h1 {
  font-size: 50px;
  font-weight: 300;
  text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
}
.banner p {
  font-size: 25px;
  font-weight: 300;
  color: rgb(255, 255, 255);
  opacity: 0.6;
  margin-bottom: 350px;
}

.banner-content {
  padding-top: 353px;
}
